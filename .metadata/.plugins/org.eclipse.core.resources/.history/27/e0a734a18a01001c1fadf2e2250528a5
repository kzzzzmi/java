package ch05;

public class ForMainTest2 {

	public static void main(String[] args) {

		/*
		 * 화면에 구구단 2단 출력하기 int num = 2;
		 * 
		 * for(int i=1; i<=9; i++) { System.out.println(num + " X " + i + " = " + (num *
		 * i)); }
		 */

		// 화면에 구구단 출력하기

		for (int i = 1; i <= 9; i++) {
			for (int j = 1; j <= 9; j++) {
				System.out.println(i + " X " + j + " = " + (i * j));
			}
			System.out.println();
		}

		// 별표시

		for (int i = 1; i < 9; i += 2) {
			for (int j = 0; j < i / 2 ; j++) {
				System.out.print(" ");
			}
			for(int j=0; j<i; j++) {
				System.out.println("*");
			}
		}
	}

}

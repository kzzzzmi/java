package ch01;

public class DataType1 {

	public static void main(String[] args) {
		
		// 데이터 타입의 종류
		// 1. 기본 자료형 (Primitive data type) -> 8가지
		// 2. 참조 타입 (Reference type)
		
		// 기본 자료형
		// 정수형
		// 크기가 다르다 (담을 수 있는 숫자에 크기가 제한되어 있다.)
		byte b;		// 1바이트 (8비트)
		short s; 		// 2바이트 (16비트)
		int i;			// 4바이트 (32비트)
		long l; 		// 8바이트 (64비트)
		
		b = 127;
	}

}

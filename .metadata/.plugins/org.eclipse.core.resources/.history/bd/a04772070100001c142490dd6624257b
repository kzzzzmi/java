package ch01;

public class DataType4 {

	public static void main(String[] args) {
		
		// 기본 자료형
		// 논리 자료형 ( 사실을 관찰하고 결과값이 참 또는 거짓으로 판별한다 ) --> true, false
		
		boolean isMarried = false;	// 변수 선언과 동시에 초기화 (정의하다)
		System.out.println(isMarried);
		
		// boolean 1바이트이다.
		
		boolean isOk;
		isOk = false;
		System.out.println(isOk);
		isOk = true;
		System.out.println(isOk);
		
		System.out.println("--------------------");
		System.out.println(true);
		System.out.println(false + true);

	}

}
